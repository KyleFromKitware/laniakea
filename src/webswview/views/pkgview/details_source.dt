extends base

block head
  - auto title = pkg.name ~ " source package";

block contents
  .col-md-3
    p.lead Suites
    |
    .list-group
      - foreach (ref suite; suites)
        - if (suite == pkg.suite)
          a.list-group-item.active= pkg.suite
        - else
          a.list-group-item(href='/package/source/#{suite}/#{pkg.component}/#{pkg.name}')= suite
  |
  .col-md-9
    .thumbnail
      .caption-full
        h3 #{pkg.name} - #{pkg.ver}
        |
        p Homepage: #{pkg.homepage}
        |
        p VCS Browser: #{pkg.vcsBrowser}
        |
        h4 Build Dependencies
        ul
          - foreach (ref dep; pkg.buildDepends)
            li= dep
    |
